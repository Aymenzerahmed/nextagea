#!/usr/bin/env python

import robot_upstart
import os
import subprocess

services = []

# j = robot_upstart.Job(name="nextagea_roscore",
#     workspace_setup=os.environ.get('ROBOT_SETUP'),
#     master_uri=os.environ.get('ROS_MASTER_URI'),
#     systemd_after='NetworkManager.service')
# services.append("nextagea_roscore")
# # Uninstall old scripts
# j.uninstall()
# # Stuff to launch on system startup.
# j.symlink = True
# j.add(package="nextagea_bringup", filename="launch/roscore.launch")
# j.install()

j = robot_upstart.Job(name="nextagea_safety",
    workspace_setup=os.environ.get('ROBOT_SETUP'),
    master_uri=os.environ.get('ROS_MASTER_URI'),
    systemd_after='NetworkManager.service remote-fs.target syslog.target')
services.append("nextagea_safety")
# Uninstall old scripts
j.uninstall()
# Stuff to launch on system startup.
j.symlink = True
j.add(package="nextagea_hardware_interface", filename="launch/safety_interface.launch")
j.install()

j = robot_upstart.Job(name="nextagea_startup",
    workspace_setup=os.environ.get('ROBOT_SETUP'),
    master_uri=os.environ.get('ROS_MASTER_URI'),
    systemd_after='nextagea_safety.service')
services.append("nextagea_startup")
# Uninstall old scripts
j.uninstall()
# Stuff to launch on system startup.
j.symlink = True
j.roslaunch_wait = True
j.add(package="nextagea_hardware_interface", filename="launch/nextagea_startup.launch")
j.install()

def call(cmd):
    p = subprocess.Popen(cmd)
    p.communicate()
    if p.returncode == 0:
        return True
    else:
        return False

print('Restarting services ...')
call(['sudo', 'systemctl', 'daemon-reload'])
cmd = 'sudo systemctl daemon-reload'
for name in services:
    print ('  Starting ' + name + ' ...')
    if not call(['sudo', 'systemctl', 'start', name]):
        print('  Cannot start ' + name + '!')
        exit(1)
    call(['sudo', 'service', name, 'restart'])

print('Operation successful')
